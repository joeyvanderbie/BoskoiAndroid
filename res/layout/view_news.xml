<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout android:padding="3dp"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/background_color_block"
		android:orientation="horizontal" android:gravity="top"
		android:layout_gravity="top">
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/sharebutton"
			android:text="@string/shareBtn" android:onClick="sharePost"
			android:layout_alignParentRight="true" />
		<TextView android:layout_toLeftOf="@id/sharebutton"
			android:layout_alignParentLeft="true" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/blogposttitle"
			android:textSize="18dp" android:minHeight="18dp" android:gravity="bottom"
			android:text="Boskoi blogpost" android:textStyle="bold"
			android:layout_marginTop="2dp" android:textColor="@drawable/date_color"
			android:layout_weight="1" android:layout_gravity="top" 
			android:layout_marginLeft="3dp"/>
	</RelativeLayout>

	<WebView android:id="@+id/webviewnews" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

</LinearLayout>